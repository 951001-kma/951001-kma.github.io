    z-index: 0;
  }
  .linear-gradient-2 {
    position: absolute;
    right: 0;
    top: 0;
    width: 100%;
    height: 100%;
   background: radial-gradient(at right center, rgba(1, 190, 150 , 0.6) , rgb(0, 0, 0), rgb(0, 0, 0));
    z-index: 0;
    
  }

  @media (max-width:500px){
